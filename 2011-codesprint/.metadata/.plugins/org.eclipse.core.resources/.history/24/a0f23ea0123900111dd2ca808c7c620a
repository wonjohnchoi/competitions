import java.util.Collections;
import java.util.Iterator;
import java.util.LinkedList;
import java.util.Scanner;


public class PickingCards {
    public static void main(String args[]) {
        Scanner in = new Scanner(System.in);
        int MAXN = 50000;
        long MOD = 1000000007;
        
        int t = in.nextInt();
        for (int i = 0; i < t ; i += 1) {
            int n = in.nextInt();
            LinkedList<Integer> ins = new LinkedList<Integer>();
            
            for (int j = 0; j < n; j += 1) {
                ins.add(in.nextInt());
            }
            
            Collections.sort(ins);
            Collections.reverse(ins);
            int[] weight = new int[MAXN];
            int[] freq = new int[MAXN];
            int idx = 0;
            while (!ins.isEmpty()) {
                weight[idx] = ins.remove(0);
                freq[idx] = Collections.frequency(ins, weight[idx] + 1);
                Iterator<Integer> iter= ins.iterator();
                while (iter.hasNext()) {
                    if (iter.next() == weight[idx]) {
                        iter.remove();
                    } else {
                        break;
                    }
                }
                idx += 1;
            }
            dump(weight);
            dump(freq);
            
            int choices = n;
            long result = 1;

            for (int j = 0; j < MAXN; j += 1) {
                if (freq[j] == 0) {
                    break;
                }
                result *= perm(choices - weight[j], freq[j], MOD) % MOD;
                choices -= freq[j];
               
            }
            
            System.out.println(result);
        }
        
    }
    
    static void dump(int[] data) {
        for (Integer d : data) {
            System.out.print(d + " ");
        }
        System.out.println();
    }

    private static long perm(long n, long r, long MOD) {
        if (n < r) {
            return 0;
        }
        long result = 1;
        for (long i = n; i >= n - r + 1; i -= 1) {
            result = result * i % MOD;
        }
        return result;
        
    }
    
    
}
